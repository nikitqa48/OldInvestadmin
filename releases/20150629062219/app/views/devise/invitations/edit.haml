.half-shadow-container
  %h2= t 'devise.invitations.edit.header'
  = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class => "form-horizontal large-form"} do |f|
    = error_explanation resource
    = f.hidden_field :invitation_token
    .fieldset
      = form_group f, :password, :password_field, :placeholder => t("activerecord.attributes.user.password")
      = form_group f, :password_confirmation, :password_field, :placeholder =>  t("activerecord.attributes.user.password_confirmation")
    .form-actions
      = f.submit t("devise.invitations.edit.submit_button"), :class => "btn btn-primary"