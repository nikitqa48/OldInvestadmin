= form_for @city, :html => {:multipart => true,:class => 'map-selector form-horizontal hotkeys picture-list large-form double-submit-protector', 'data-namespace' => 'city', 'data-map-selector' => 'point'} do |f|
  %fieldset
    %legend
      = defined?(legend) && legend
    = render_notice
    = error_explanation @city
    .form-group
      .control-label
        = f.submit @city.new_record? ? t('buttons.create') : t('buttons.save'), :class => 'btn btn-primary btn-with-tooltip','data-original-title' => t('messages.tooltips.save'),'data-placement' => 'bottom'
      .controls
    = form_group f, :name, :text_field
    = form_group f, :description, :text_area
    = form_group f, :population, :text_field
    = form_group f, :economically_active_population, :text_field
    = form_group f, :area, :text_field
    = form_group f, :based, :text_field
    = form_group f, :chief, :text_field
    = form_group f, :subdivisions, :text_field
    = form_group f, :site, :text_field
    = form_group f, :density, :text_field
    = form_check_box f, :demo_mode

    = map_field f, true

    = render 'gallery_pictures/pictures', form: f
    .form-actions
      = f.submit @city.new_record? ? t('buttons.create') : t('buttons.save'), :class => 'btn btn-primary btn-with-tooltip','data-original-title' => t('messages.tooltips.save'),'data-placement' => 'bottom'
      = link_to t('buttons.cancel'), cities_path, :class => 'btn btn-default'