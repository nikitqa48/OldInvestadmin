= render_notice
.new-session
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .form-horizontal.hotkeys.large-form.double-submit-protector
      %fieldset
        %legend
          = t(".sign_in")
        = form_group f, :email, :text_field
        = form_group f, :password, :password_field
        - if devise_mapping.rememberable?
          .remember
            = form_check_box f, :remember_me
        .form-actions
          = f.submit t(".sign_in"), class: "btn btn-primary"
